//Crie um algoritmo que verifique se uma pessoa é maior ou menor de idade
programa {
  funcao inicio() {
    //declarar variaveis
    inteiro idade

    escreva("Qual a sua idade? ")
    leia(idade)
    //estrtura condicional simples
    se (idade >= 18) {
      escreva("Parabéns, voce ja é maior de idade")
    }
       
  }
}
