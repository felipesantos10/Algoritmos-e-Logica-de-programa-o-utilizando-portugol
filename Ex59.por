programa
{
	funcao inicio ()
	{
	//vetor
	
	cadeia fidelizacao[10]
	inteiro cont
	cadeia cliente
	
	escreva("Restaurante Gramado\n")
	escreva("############\n")
	escreva("Ganhe um almoço grátis a cada 10 refeições pagas\n")
